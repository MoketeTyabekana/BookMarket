@using BookStore.Models
@model List<Books>
@{
    ViewData["Title"] = "Cart";
}

<h2>Cart</h2>
<br />
<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Price</th>
                <th>Category</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
            <tr>
                <td>
                    <img src="~/@item.Image" width="200" height="150" />
                </td>
                <td>@item.Title</td>
                <td>@item.Price</td>
                <td>@item.ProductTypes.ProductType</td>
                <td>
                    <a asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-6">
       
    </div>
    <div class="col-6 text-right">
        <h3>Total Amount</h3>
        <h3>Grand Total: R @Model.Sum(c => c.Price)</h3>
        <a asp-area="Customer" asp-action="Index" asp-controller="Home" class="btn btn-danger">Cancel</a>
        <a asp-area="Customer" asp-action="CheckOut" asp-controller="Order" class="btn btn-info">Proceed to Checkout</a>
    </div>
</div>

