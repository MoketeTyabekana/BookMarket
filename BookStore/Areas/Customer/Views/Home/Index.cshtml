@using BookStore.Models;
@using X.PagedList.Mvc.Common
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Books>


@{
    ViewData["Title"] = "Home Page";
}
<br /><br />

<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size: 23px;color: steelblue">@book.Title</label>
                    </h4>
                </div>
                <img src="~/@book.Image" alt="Card Image" class="card-img-top" style="height: 300px; width:349px" />
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size: 20px;color: #a51313"><b>Price: R @book.Price</b></label>
                        </div>
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@book.Id" class="btn btn-success pull-right btn-outline-info">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div>
    @Html.PagedListPager(Model, c => Href("~/Customer/Home/Index?page=" + c),PagedListRenderOptionsBase.PageNumbersOnly)
</div>












